#!/usr/bin/env bash

HOME=${HOME:-/home/${whoami}}

# Cores
RED='\033[0;31m'
BLUE='\033[0;34m'
GREEN='\033[0;32m'
BOLDRED='\033[1;31m'
NC='\033[0m'

# API Key
AUTOREMOTEKEY="$(cat $HOME/.autoremoteapikey)"

if [ $# -lt 1 ]; then
	printf "${RED}Syntax: $(basename $0) <MESAGE>${NC}\n\n" 1>&2
    exit 1
fi

curl --data-urlencode "message=$1" "https://autoremotejoaomgcd.appspot.com/sendmessage?key=$AUTOREMOTEKEY" && notify-send "Notify" "Notification sent: $1" || notify-send "Notify" "Notification error!"

exit 0
